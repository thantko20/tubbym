// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid(7))
  email         String    @unique
  name          String
  emailVerified Boolean
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]

  @@map("user")
}

model Session {
  id        String   @id @default(uuid(7))
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("session")
}

model Account {
  id                     String    @id @default(uuid(7))
  userId                 String
  accountId              String
  providerId             String
  accessToken            String?
  refreshToken           String?
  accessTokenExpiresAt   DateTime?
  refereshTokenExpiresAt DateTime?
  scope                  String?
  idToken                String?
  password               String?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id @default(uuid(7))
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

model Video {
  id              String    @id @default(uuid(7))
  title           String
  description     String?
  key             String?   @unique
  thumbnailUrl    String?
  durationSeconds Int
  viewsCount      Int       @default(0)
  uploaderId      String?
  uploadStatus    String    @default("UPLOADING")
  visibility      String    @default("PUBLIC")
  uploadDate      DateTime?
}
